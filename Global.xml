<!-- Xml UI. See documentation: https://api.tabletopsimulator.com/ui/introUI/ -->

<!-- Start game panel -->
<Panel id="start-game-panel" width="100" height="100" active="false">
    <Button onClick="ACT_StartGame">Nouvelle partie</Button>
</Panel>

<!-- Display who is taking too long to play-->
<Text   id="thinking-player"
        height="50"
        resizeTextForBestFit="true"
        offsetXY="0 -100"
        rectAlignment="UpperCenter"
        active="false"/>

<!-- Annonce panel -->
<Panel id="annonce-panel" active="false">
    <Button id="coinche-button"
            color="orange"
            width="200"
            height="200"
            tooltip="Coincher!"
            tooltipPosition="Below"
            resizeTextForBestFit="true"
            visibility="nil"
            onClick="ACT_Coinche">
        ¯\_(ツ) ┬──┬
    </Button>
    <Panel  id="stake-selector"
            color="grey"
            width="300"
            height="200"
            fontSize="40"
            allowDragging="true"
            returnToOriginalPositionWhenReleased="false"
            rectAlignment="MiddleRight"
            visibility="nil">
        <VerticalLayout>
            <HorizontalLayout height="30">
                <Button onClick="">-</Button>
                <Text id="current-stake"></Text>
                <Button interactable="false">+</Button>
            </HorizontalLayout>
            <HorizontalLayout>
                <ToggleGroup>
                    <VerticalLayout>
                        <HorizontalLayout>
                            <Toggle>♦</Toggle>
                            <Toggle>♣</Toggle>
                        </HorizontalLayout>
                        <HorizontalLayout>
                            <Toggle>♠</Toggle>
                            <Toggle>♥</Toggle>
                        </HorizontalLayout>
                    </VerticalLayout>
                </ToggleGroup>
                <VerticalLayout>
                    <Button onClick="ACT_Stake">Annoncer</Button>
                    <Button onClick="ACT_Pass">Passer</Button>
                </VerticalLayout>
            </HorizontalLayout>
        </VerticalLayout>
    </Panel>
</Panel>

<!-- Display the current stake -->
<Text   id="current-stake"
        height="30"
        width="100"
        color="white"
        resizeTextForBestFit="true"
        offsetXY="0 -100"
        rectAlignment="UpperRight"
        active="false"/>

<Panel active="false">Playing panel</Panel>

<Panel active="false">Scores panel</Panel>